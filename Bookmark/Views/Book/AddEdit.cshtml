@model Book

@{
    ViewData["Title"] = $"{ViewBag.Operation} Book";
}

<h1 class="display-4">@ViewBag.Operation Book</h1>

<form asp-action="Add" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Rating" class="form-label"></label>
        <input asp-for="Rating" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="About" class="form-label"></label>
        <select asp-for="AboutId" class="form-select"
                asp-items="@(new SelectList(ViewBag.Abouts,"AboutId","FullName"))"></select>
    </div>
    <div class="mb-3">
        <label asp-for="Genre" class="form-label"></label>
        <select asp-for="GenreId" class="form-select"
                asp-items="@(new SelectList(ViewBag.Genres,"GenreId","Name"))"></select>
    </div>
    <div class="mb-3">
        <label asp-for="Date" class="form-label"></label>
        <input asp-for="Date" class="form-control" />
    </div>

    <input type="hidden" asp-for="BookId" />

    <button type="submit">Save</button>
    <my-link-button action="Index" controller="Home">Cancel</my-link-button>
</form>


